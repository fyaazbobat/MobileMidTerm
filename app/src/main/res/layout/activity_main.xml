<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#68C0E8"
    android:orientation="vertical"
    tools:context=".FyaazActivity">

    <TextView
        android:id="@+id/fya12"
        android:layout_width="303dp"
        android:layout_height="61dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="149dp"
        android:text="@string/fyaName"
        android:textAlignment="center"
        android:textColor="#F44336"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="187dp"
        android:layout_height="192dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/img5"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fya12" />

    <EditText
        android:id="@+id/fyaNum"
        android:layout_width="296dp"
        android:layout_height="69dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:hint="Password is your student id"
        android:inputType="numberPassword"
        android:password="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fyaTextPass" />

    <EditText
        android:id="@+id/fyaTextPass"
        android:layout_width="294dp"
        android:layout_height="55dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Username, i.e fyaaz.bobat"
        android:inputType="textPassword"
        android:password="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/fyabutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="33dp"
        android:text="FYAAZ SIGN IN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fyaNum" />
</androidx.constraintlayout.widget.ConstraintLayout>